package skeleton

import "github.com/fedotovmax/microservices-shop/customer-site/pkg/utils"

type Props struct {
	ID         string
	Class      string
	Attributes templ.Attributes
}

templ Skeleton(props *Props) {
	{{ var p *Props }}
	if props != nil {
		{{ p = props }}
	} else {
		{{ p = &Props{} }}
	}
	<div
		if p.ID != "" {
			id={ p.ID }
		}
		class={
			utils.TwMerge(
				"animate-pulse rounded bg-muted",
				p.Class,
			),
		}
		{ p.Attributes... }
	></div>
}
